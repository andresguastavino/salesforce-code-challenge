<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cant_Create_Training_Without_DueDate</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISNULL(Due_Date__c),
  RecordType.DeveloperName = &quot;Training&quot;
)</errorConditionFormula>
    <errorDisplayField>Due_Date__c</errorDisplayField>
    <errorMessage>Due Date cannot be null for Product with Training Record Type.</errorMessage>
</ValidationRule>
